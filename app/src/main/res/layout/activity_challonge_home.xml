<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.brandon.challongemobile.ChallongeHome"
    android:background="#444444">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="245dp"
            android:layout_height="152dp"
            android:text="My Tournaments"
            android:background="#373737"
            android:id="@+id/button4"
            android:layout_gravity="center_horizontal|top"
            android:onClick="onMyTourn"
            android:textColor="#71F288" />

        <Button
            android:layout_width="243dp"
            android:layout_height="154dp"
            android:text="Create New Tournament"
            android:background="#373737"
            android:id="@+id/button5"
            android:layout_gravity="center"
            android:onClick="onCreateTourn"
            android:textColor="#71F288" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Account"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#ffffffff" />

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar2"
            android:layout_gravity="center" />

    </FrameLayout>
</RelativeLayout>
